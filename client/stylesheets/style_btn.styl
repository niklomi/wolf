@import 'colors.import';

.btn-outline
	padding: 11px 22px;
	font-size: 15px;
	background: transparent none repeat scroll 0% 0%;
	color: #FFF;
	line-height: 1;
	border-color: #FFF;

.btn-outline-big
	padding: 5px 12px;
	font-weight: bold;
	border: 2px solid body-color;

.btn-outline-small
	padding: 6px 12px;

.btn-outline:hover
	background: transparent none repeat scroll 0% 0%;

.btnM
	background: main-color
	border: medium none;
	padding: 14px 20px;
	letter-spacing: 0.03em;
	display:inline-block;
	font-weight: 600;
	text-align: center;
	text-decoration: none;
	border-radius: 4px;
	-webkit-font-smoothing: antialiased;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	color: #FFF;
	transition: all 0.15s;

.btnM-apply
	text-transform: uppercase;
	display: block;
	width: 100%;

.btnM-red
	transition:all 0.1s
	background-color: #f25f5c
	&:hover
		background:#f36f6c !important;
	&:active
		background:#c14c49 !important;
	&:disabled
		background:#f58f8c !important;


.effect-for-buttons
	transition:all 0.1s
	&:hover
		background:#3764e3 !important;
	&:active
		background:#1a42b3 !important;
	&:disabled
		background:#5e7ac9 !important;
