@import 'colors.import';

.button
  border: 0.1em solid;
  padding: 10px 20px;
  letter-spacing: 0.03em;
  display:inline-block;
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  border-radius: 4px;
  -webkit-font-smoothing: antialiased;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  color: #FFF;
  position: relative;
  transition: all 0.1s;

.button-apply
  text-transform: uppercase;
  display: block;
  width: 100%;

.button-big
  padding: 12px 20px

.button-blue
  background: color-main
  color: #fff !important
  border: 0.1em solid color-blue-border
  &:active
    top: 1px

.button-red
  background: color-red
  color: #fff !important
  border: 0.1em solid color-red-border
  &:active
    top: 1px
