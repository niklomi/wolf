@import 'colors.import';

.button
  border: 0.1em solid;
  padding: 10px 20px;
  letter-spacing: 0.03em;
  display:inline-block;
  font-weight: 600;
  text-align: center;
  text-decoration: none;
  border-radius: 4px;
  -webkit-font-smoothing: antialiased;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  color: #FFF;
  position: relative;
  transition: all 0.1s;

.button-apply
  text-transform: uppercase;
  display: block;
  width: 100%;

.button-big
  padding: 12px 20px

.button-yellow
  background: #fff
  color: color-main
  border-color: color-main
  &:hover
    background: color-main
    color: #fff
    border: 0.1em solid #1096DC
  &:active
    background: color-main
    color: #fff
    border: 0.1em solid #1096DC
    top: 1px
