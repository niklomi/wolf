#contactwolf
	&:hover,&:active,&:focus,&:visited
		color:#FFF

.new-job
	padding:1px 3px
	font-weight:bold
	text-align:center
	border-radius:4px
	background-color:#FFF12D

td
	position:relative

.inline
	display:inline-block

.param-group
	text-align:center

.wolfy-back
	background-color: rgba(255,252,213,0.8)
