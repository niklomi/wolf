@import 'colors.import';

html
	min-height: 101%;

body
	color:body-color
	font-family: 'Proxima Nova',"Helvetica Neue",Arial,Helvetica,sans-serif;
	position:relative
	background:#f4f4f4
	min-height:101%

h1, h2, h3, h4, h5, h6, p
	margin:0
	padding:0

.cursor-default
	cursor: default !important;

.effect-for-text
	&:hover,&:active,&:focus
		color:body-color
		transition:all 0.1s

.b-600
	font-weight:600

.no-select
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

.card
	background:#FFF
	border:1px solid border-color-card
	border-radius:4px
	box-shadow: 0px 0px 1px 0 rgba(0,0,0,.1)

button
	outline-style: none;

.inline-block
	display:inline-block

a
	color:main-color
	outline-style: none

a:hover, a:focus
	text-decoration: none;
	color: main-color;
	border-bottom:2px solid main-color
	outline-style: none;

.main
	position: relative;
	z-index: 1;

.h4
	font-weight: bold;

.border
	border-top: 1px solid rgba(0, 0, 0, 0.08);

#orr
	margin-top: 10px
	font-weight: bold
	font-weight: 20px
	text-align: center
	padding: 0 2rem
	@media (max-width: xs-l)
		padding: 0 1rem

.show-780
	display:none !important;
	@media (max-width:770px)
		display:block !important;

.hide-780
	@media (max-width:770px)
		display:none !important;

.details{
	font-weight: 700;
	font-size: 16px;
}
.tagsJobs{
	display: inline-block;
	margin-right: 3px;
	margin-bottom: 3px;
	margin-top: 3px;
}

.tags{
	font-size: 10px;
	text-transform: uppercase;
	color:body-color
}

#tag-hover:hover {
	background: rgba(0, 0, 0, 0.2) none repeat scroll 0% 0%;
	transition:all 0.1s;
}
#tag-hover:hover .tags{
	transition:all 0.1s;
}

.body-color
	color: body-color

.fullCont{
	padding: 2em;
	font-size: 16px;
}
.moreInfo{
	margin:30px 0;
}
.wrap-bigInfo
	margin: 2rem

.main-table tr
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

.jumbotron{
	text-align: center;
}

#del-pad{
	padding-top: 0px;
}

.container-l
	max-width: 90rem
	margin: 0 auto
	padding: 0 5px
	@media (max-width: xs-l)
		padding: 0

.table-start
	@media (max-width: xs-l)
		padding: 0 5px

.bigInfo.clicked {
	background-color: #FDFCED;
}
.smallInfo.clicked {
	background-color: #FDFCED;
}

#highlighte{
	background-color: #FFFCCE;
}

.loading-message {
	color: #fff;
	font-size: 25px;
	font-weight: 300;
	font-family: sans-serif;
}

input:focus
	outline: none

.typeahead,
.tt-query,
.tt-hint
	width: 396px;
	padding: 8px 12px;
	line-height: 30px;
	border: 2px solid #ccc;
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	outline: none;

.typeahead {
  background-color: #fff;
}

.typeahead:focus {
  border: 2px solid #0097cf;
}

.tt-query
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
	-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);


.tt-hint {
	color: #999
}

.tt-menu {
	width: 422px;
	margin: 4px 0;
	padding: 8px 0;
	background-color: #fff;
	border: 1px solid #ccc;
	border: 1px solid rgba(0, 0, 0, 0.2);
	-webkit-border-radius: 8px;
	-moz-border-radius: 8px;
	border-radius: 8px;
	-webkit-box-shadow: 0 5px 10px rgba(0,0,0,.2);
	-moz-box-shadow: 0 5px 10px rgba(0,0,0,.2);
	box-shadow: 0 5px 10px rgba(0,0,0,.2);
}

.tt-suggestion {
	padding: 3px 20px;
	font-size: 18px;
	line-height: 24px;
}

.tt-suggestion:hover {
	cursor: pointer;
	color: #fff;
	background-color: #0097cf;
}

.tt-suggestion.tt-cursor {
	color: #fff;
	background-color: #0097cf;
}


.search-more:hover
	color: main-color;

.hidden
	display: none;

.bert-alert.visible
	border-radius:4px;
	border-color: #912D2B;

.bert-alert.growl-top-right span
	padding: 4px 0px 4px;

.bert-alert.danger
	background-color: #FFF6F6;
	color: #912D2B;

#error404
	height: 100vh
	width: 100%
	background-color:#f4f4f4
	padding:10rem 0
	h1
		margin-top: 0
		font-weight:bold
		font-size:8rem
		@media(max-width:xs-sl)
			font-size: 7rem
	h2
		color: #555 !important
		@media(max-width:xs-l)
			font-size: 2.5rem
		@media(max-width:xs-sl)
			font-size: 1.5rem

.loading
	width:100%
	text-align: center
	margin:2rem 0
	.loading-gif
		background-image: url('image/rolling.gif')
		width: 5rem;
		height: 5rem;
		display: inline-block;
		background-size:cover
	p
		font-weight: 600;

#loadmore
	display: inline-block
	cursor: pointer

.viewInfo
	display: inline-block;

div.viewInfo
	width: 15rem
	@media (max-width: xs-sl)
		width: 10rem;
		font-size: 0.8em;
		padding: 10px 5px;

.footer
	position: absolute
	bottom: 0
	right: 0
	left: 0
	background: #f4f5f4 none repeat scroll 0% 0%
	padding:2rem
	p
		font-size: 1.5em
		color: #555
		@media (max-width: xs-sl)
			font-size: 1.2em
	span
		color: #777

.steps > h3
	@media (max-width: xs-sl)
		font-size: 1.2em

.steps > h1
	@media (max-width: xs-sl)
		font-size: 2em

.loader
	text-align: center
	display: inline-block
	vertical-align: top

#give-some-padding
	width:100%
	padding:5rem 0

.hide-sev
	@media(max-width:700px)
		display: none !important

.hide-fit
	@media(max-width:540px)
