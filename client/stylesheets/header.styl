@import 'colors.import';

.header
	position: relative
	border-bottom:1px solid border-color
	padding: 3rem 0;
	background:#FFF
	overflow:hidden
	@media (max-width:780px)
		padding:2rem 0
	a
		&:hover,&:focus
			border:none
	ul
		list-style: none
		display:inline-block
		margin:0
		padding:0 0 0 2rem
		li
			display:inline-block
			padding:0 2rem
			a
				color:color-747
				font-size:18px

.hero-title
	position:relative
	letter-spacing: -0.5px
	margin: 0
	display:inline-block

#wolfy_pic
	background-image: url('image/picWOLFY.png');
	width: 5rem;
	height: 5rem;
	background-size: cover;
	position: absolute;
	left: -6rem;
	top:-4px
	@media (max-width:1060px)
		display:none

#wolfy_pic_mobile
	background-image: url('image/picWOLFY.png');
	width: 5rem;
	height: 5rem;
	background-size: cover;
	position: absolute;
	top:10px


.south
	font-family:'Montserrat', 'Proxima Nova', "Helvetica Neue", Arial, Helvetica, sans-serif
	font-weight:600
	margin: 0
	display:inline-block
	padding: 0 0 0.5rem
	letter-spacing: -0.8px
	position:relative
	color:body-color
	@media (max-width:780px)
		font-size:28px
		padding: 0 0 0 5rem
	#header-wolf-span
		font-weight: 400
		color: color-999


