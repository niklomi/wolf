@import 'colors.import';

.header
	position: relative
	border-bottom:1px solid border-color
	padding: 3rem 0;
	background:#FFF
	@media (max-width:780px)
		padding:2rem 0
	a
		&:hover,&:focus
			border:none
	ul
		list-style: none
		display:inline-block
		margin:0
		padding:0 0 0 2rem
		li
			display:inline-block
			padding:0 2rem
			a
				color:color-747
				font-size:18px

.hero-title
	position:relative
	letter-spacing: -0.5px
	margin: 0
	display:inline-block

#wolfy_pic
	background-image: url('image/picWOLFY.png');
	width: 5rem;
	height: 5rem;
	background-size: cover;
	position: absolute;
	left: -6rem;
	top:-4px
	@media (max-width:1060px)
		display:none

#wolfy_pic_mobile
	background-image: url('image/picWOLFY.png');
	width: 5rem;
	height: 5rem;
	background-size: cover;
	position: absolute;
	top:10px


.south
	font-family:'Montserrat', 'Proxima Nova', "Helvetica Neue", Arial, Helvetica, sans-serif
	font-weight:600
	margin: 0
	display:inline-block
	padding: 0 0 0.5rem
	letter-spacing: -0.8px
	position:relative
	color:#000
	@media (max-width:780px)
		font-size:28px
		padding: 0 0 0 5rem
	#header-wolf-span
		font-weight: 400
		color: color-999

.mobile-header
	.hamburger-menu
		display: block;
		position: absolute;
		bottom: 0;
		right: 0;
		width: 0;
		height: 100%;
		min-height: 100%;
		background: #343434;
		font-size: 13px;
		line-height: 36px;
		text-transform: uppercase;
		z-index: 1000;
		-webkit-transition: width .25s ease-out;
		transition: width .25s ease-out;
		#hamburger
			position: absolute;
			left: -66px;
			width: 66px;
			height: 70px;
			background: #343434;
			overflow: hidden;
			cursor: pointer;
			text-align:center;
			-webkit-transition: all .25s ease-out;
			transition: all .25s ease-out;
			i
				font-size:32px
				color:#FFF
				padding: 2rem 0
		ul
			position: relative;
			bottom: 0;
			width: 100%;
			min-height: 100%;
			background: #343434;
			overflow: hidden;
			padding:0;
			overflow-y: auto;
			height:100vh
			margin:1rem 0
			text-align:center
			li
				display:block
				a
					color: #FFF
	#open
		width:15rem
