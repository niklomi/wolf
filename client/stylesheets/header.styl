@import 'colors.import';

.south
  font-family: 'Rezland','Montserrat', 'Proxima Nova', "Helvetica Neue", Arial, Helvetica, sans-serif
  font-weight:600
  display:inline-block
  letter-spacing: 0.8px
  position: relative

.header
  position: relative
  padding: 1rem 2rem
  height: 7rem
  .nav-a
    color: color-black
    text-transform: uppercase
    font-weight: 600
    font-size: 14px
    float: right
    line-height: 5rem
    padding:0 1.5rem
    &:hover, &:active, &:focus
      color: color-yellow
      border:none
    &:last-child
      padding-left: 0
  .button
    margin: 0.5rem 0 0 1rem
    text-transform: uppercase;

.header-img
  position: relative
  background: rgba(40, 31, 0, 0.6)
  padding: 3rem 2rem;
  height: 35rem
  @media(max-width:750px)
    height: auto
  &:before
    background-image: url('/image/work-hero.jpg')
    background-size: cover;
    background-position: 100% 100%
    background-color: color-black
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: -1;

.header-search
  margin: 0 0 6rem
  .header-search-wrap
    position: relative;
    width: 62rem;
    max-width: 100%;
    margin: 0 auto;
    label
      position: absolute;
      font-size: 20px;
      right: 16px;
      cursor: pointer;
      color: color-999;
      margin: 0
      bottom: 10px
    input
      background: #fff;
      font-size: 20px;
      height: 5rem;
      margin: 0 auto;
      padding: 0 4.5rem 0 2rem;
      border: none

.hero-about
  color: #FFF
  font-weight: 600
  font-size: 36px;
  margin: 5rem 0 2rem;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1)
  @media(max-width:650px)
    font-size: 24px !important
  @media(max-width:750px)
    font-size: 28px

.hero-title
  color: color-black
  position:relative
  margin: 0
  font-size: 32px
  &:hover, &:active, &:visited, &:focus
    color: color-black
    border-bottom: 0

.mobile-header
  .hamburger-menu
    display: block;
    position: absolute;
    bottom: 0;
    right: 0;
    width: 0;
    height: 100%;
    min-height: 100%;
    background: color-f3f3f3
    font-size: 13px;
    line-height: 36px;
    text-transform: uppercase;
    z-index: 1000;
    -webkit-transition: width .25s ease-out;
    transition: width .25s ease-out;
    #hamburger
      position: absolute;
      left: -7rem;
      width: 7rem;
      height: 7rem;
      overflow: hidden;
      cursor: pointer;
      text-align:center;
      -webkit-transition: all .25s ease-out;
      transition: all .25s ease-out;
      i
        font-size:32px
        color: color-black
        line-height: 7rem;
    ul
      position: relative;
      bottom: 0;
      width: 100%;
      min-height: 100%;
      background: color-f3f3f3
      overflow: hidden;
      padding:0;
      overflow-y: auto;
      height:100vh
      margin:1rem 0
      text-align:center
      li
        display:block
        a
          color: color-black
          font-weight: 600
          &:hover, &:active, &:visited, &:focus
            border-bottom: 0
  #open
    width:15rem
    #hamburger
      background: color-f3f3f3
      i
        color: color-black
