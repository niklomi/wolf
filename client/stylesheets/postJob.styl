@import 'colors.import';

.post-job-text
	font-size:16px
	color:body-color
	padding:0 0 1rem

.post-job
	padding: 1rem 2rem 2rem;

.post-job-head
	border-bottom:1px solid border-color-card
	color:body-color
	font-size:24px
	padding: 1.5rem 2rem 0.5rem
	font-weight: 600

#showjob
	cursor: pointer;

.wout-m
	margin: 0 !important

.container-post
	padding: 0 !important

#job-send
	.form-group
		margin:2rem 0
		input
			margin-top:0.5rem
			font-size: 16px
			box-shadow: none
		label
			font-size:18px
			margin:0
			font-weight:600
			color:color-747

#pop-submit-job
	margin:0.5rem 0 2rem

.error
	color:#822121

.success
	color:#188C4D
