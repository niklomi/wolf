@import 'colors.import';

.post-job-text
	font-size:16px
	color:body-color
	padding:0 0 1rem

.post-job
	padding: 1rem 2rem 2rem;
	button
		width:100%

.post-job-head
	border-bottom:1px solid border-color
	color:body-color
	font-size:24px
	padding: 1.5rem 2rem 1rem
	font-weight: 600


#showjob
	cursor: pointer;

.wout-m
	margin: 0 !important

.container-post
	padding: 0 !important

#job-send
	p
		text-align:center
	.form-group
		margin:2rem 0
		input
			margin-top: 0.5rem;
			font-size: 16px;
			box-shadow: none;
			border: 0;
			border-radius: 0;
			padding: 0;
			border-bottom: 2px solid;
			color: body-color
		label
			font-size:18px
			margin:0
			font-weight:600

#pop-submit-job
	margin:0.5rem 0 2rem

.error
	color:#822121

.success
	color:#188C4D
