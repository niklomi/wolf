@import '{}/client/stylesheets/colors.import';


.skills
    cursor: pointer
    .skills-body
        display: none
        ul
            margin-top: 1rem
            margin-left: 3rem
            li
                border: 0
                padding: 3px 0
                font-size: 14px
                position: relative
                text-transform: uppercase
                &:hover
                    color: main-color
                .fa-times
                    position: absolute
                    z-index: 5
                    left: -2rem;
                    top: 6px;
            .active
                color: lighten(main-color, 30%)
                &:hover
                    color: main-color
