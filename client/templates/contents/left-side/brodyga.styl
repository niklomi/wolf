@import '{}/client/stylesheets/colors.import';

.filter-logo
	padding: 1.5rem 2rem
	font-weight: 600
	font-size: 22px
	border-bottom:1px solid border-color

.filter-logo-mob
	padding: 1rem 0
	display:inline-block
	font-weight: 600
	width:100%
	font-size: 22px
	cursor: pointer
	border-bottom:1px solid border-color

.filter-body
	ul
		list-style: none;
		margin: 0
		padding: 0
		li
			padding: 1rem 2rem
			border-bottom: 1px solid border-color
			font-size:16px
			.less-more-wrap
				.less-more
					display: flex
					align-items: center
					justify-content: space-between;
			.skills
				.skills-head
					display: flex;
					align-items: center;
					justify-content: space-between;
