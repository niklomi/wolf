@import '{}/client/stylesheets/colors.import';

.main-table
	border-collapse: separate;
	.no-results
		font-size:16px
		font-weight:600
		padding:2rem 0
	.smurf
		border-bottom:1px solid border-color-card
		padding: 2rem 2rem 2rem 2.5rem;
		position:relative
		animation-duration: 1s;
		@media (max-width:960px)
			padding: 2rem 2rem 2rem 7rem;
		.job-date
			position:absolute
			top:2.2rem
			right:2rem
			font-size:16px
			@media (max-width:500px)
				display:none
		.job-companents
			padding-right: 9rem
			@media (max-width:500px)
				padding-right: 0px
			.position
				font-size:18px
				display:inline-block
				a
					&:hover
						border-color:dark-body-color
					span
						color: dark-body-color
			.company
				font-size:18px
				display:block
				color: body-color
				font-weight:200
		.description
			color:color-999
			font-size: 16px;
			font-weight:200
			line-height: 22px;
			margin-top: 0.5rem;
			&:hover
				color:body-color
				transition:all 0.1s
		.company-image
			background-size: cover;
			width: 4rem;
			height: 4rem;
			left: -2.5rem;
			top: 3rem;
			background-color: #FFF;
			position: absolute;
			border: 1px solid #E2E2E2;
			border-radius: 50%;
			@media (max-width:960px)
				border-radius: 0;
				left: 2rem;
				top: 2.3rem;
		.no-image
			font-size: 20px;
			text-align: center;
			line-height: 40px;
			font-weight: 600;
			text-transform: uppercase;
			color: color-999;
		.trend-job
			background: #F7E92E;
			position: absolute;
			top: 0;
			border-bottom-right-radius: 4px;
			left: 0;
			padding: 0 0.5rem;
			p
				color:color-747

