@import '{}/client/stylesheets/colors.import';

.body
  position: relative

.table-header
  margin: 7rem 0 1rem
  border-bottom: 1px solid color-f3f3f3
  padding: 0 2rem
  h2
    padding-bottom: 1rem
    font-weight: 600

.main-table
  border-collapse: separate;
  .no-results
    font-size: 24px
    color: #c1c1c1;
    font-weight:600
    padding: 2rem 0
  .smurf
    padding: 2rem 3rem;
    position:relative
    animation-duration: 1s;
    min-height: 9rem
    &:nth-child(2n+1)
      background-color: color-f9f9f9;
    .details
      position: absolute;
      right: 3rem;
      top: 2.4rem;
      @media (max-width: 768px)
        position: initial;
        margin-top: 1rem
        width: 100%
    .job-components
      padding: 0 18rem 0 8rem;
      @media (max-width: 768px)
        padding: 0
      .position
        font-size:18px
        display:inline-block
        font-weight: 600
        color: color-black
      .bottom
        .fa-circle
          color: color-yellow;
          font-size: 10px;
          position: relative;
          top: -1px
          padding-right: 1rem
        span
          font-size:16px
          color: color-black
          font-weight:400
          display: inline-block;
          padding-right: 1rem
          &:last-child
            padding-right: 0
    .description
      color:color-999
      font-size: 16px;
      font-weight:400
      line-height: 22px;
      margin-top: 0.5rem;
    .company-image
      background-size: cover;
      width: 4rem;
      height: 4rem;
      background-color: #FFF;
      position: absolute;
      border-radius: 0;
      left: 3rem;
      top: 2.3rem;
    .no-image
      font-size: 20px;
      font-family: 'Playfair Display', serif;
      text-align: center;
      line-height: 38px;
      font-weight: 600;
      text-transform: uppercase;
      color: #FFF;
      background: color-black

.hidden-xs-l.td-tags
  margin-top: 0.5rem

.fixed
  position: fixed !important
